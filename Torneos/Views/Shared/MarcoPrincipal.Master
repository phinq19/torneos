                <a href="/">Inicio</a> <a href="/">ACAF</a> <a href="/">Contacto</a>
            </div>
            <asp:ContentPlaceHolder ID="Contenido" runat="server" />
        </div>
        <div id="PieDocumento">
            Todos los derechos reservados
            <%= DateTime.Now.Year %>
        </div>
    </div>
</body>
</html>
